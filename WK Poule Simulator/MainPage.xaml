                    <Entry Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding TeamD.DefensePoints}"  HorizontalOptions="Center" MaxLength="2"></Entry>

                    <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Text="Teamplay Points:"  HorizontalOptions="Center" VerticalOptions="Center"></Label>
                    <Entry Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding TeamD.TeamPlayPoints}"  HorizontalOptions="Center" MaxLength="2"></Entry>
                </Grid>

            </Grid>

            <Grid Grid.Row="2" Grid.Column="0" x:Name="Matches" HorizontalOptions="FillAndExpand">
                <Grid.RowDefinitions>
