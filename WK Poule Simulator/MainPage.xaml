                <Button Grid.Row="0" Grid.Column="0" Text="Reset Poule" x:Name="btnResetPoule" Clicked="btnResetPoule_Clicked"  BackgroundColor="Red" TextColor="White" HorizontalOptions="Fill"></Button>
            </Grid>
        </Grid>
    </StackLayout>

