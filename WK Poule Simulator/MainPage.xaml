                    <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="Defense Points:"  HorizontalOptions="Center" VerticalOptions="Center"></Label>
                    <Entry Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding TeamC.DefensePoints}"  HorizontalOptions="Center" MaxLength="2"></Entry>

