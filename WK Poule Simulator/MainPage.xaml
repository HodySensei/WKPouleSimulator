<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WK_Poule_Simulator.MainPage" BackgroundColor="Green">

    <StackLayout Padding="10" >

        <Grid Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="5"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="5"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="5"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Padding="5" Grid.Row="0" Grid.Column="0" HorizontalOptions="FillAndExpand">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="0" Grid.Column="0" BackgroundColor="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="5"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"></ColumnDefinition>
                        <ColumnDefinition Width="10"></ColumnDefinition>
                        <ColumnDefinition Width="80"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Team A"  HorizontalOptions="Center"></Label>


                    <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="Offense Points:"  HorizontalOptions="Center" VerticalOptions="Center"></Label>
                    <Entry Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding TeamA.OffensePoints}"  HorizontalOptions="Center" MaxLength="2"></Entry>

                    <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="Defense Points:"  HorizontalOptions="Center" VerticalOptions="Center"></Label>
                    <Entry Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding TeamA.DefensePoints}"  HorizontalOptions="Center" MaxLength="2"></Entry>

                    <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Text="Teamplay Points:"  HorizontalOptions="Center" VerticalOptions="Center"></Label>
                    <Entry Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding TeamA.TeamPlayPoints}"  HorizontalOptions="Center" MaxLength="2"></Entry>


                </Grid>

                <Grid Grid.Row="0" Grid.Column="1" BackgroundColor="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="5"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"></ColumnDefinition>
                        <ColumnDefinition Width="10"></ColumnDefinition>
                        <ColumnDefinition Width="80"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Team B"  HorizontalOptions="Center"></Label>


                    <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="Offense Points:"  HorizontalOptions="Center" VerticalOptions="Center"></Label>
                    <Entry Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding TeamB.OffensePoints}"  HorizontalOptions="Center" MaxLength="2"></Entry>

                    <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="Defense Points:"  HorizontalOptions="Center" VerticalOptions="Center"></Label>
                    <Entry Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding TeamB.DefensePoints}"  HorizontalOptions="Center" MaxLength="2"></Entry>

                    <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Text="Teamplay Points:"  HorizontalOptions="Center" VerticalOptions="Center"></Label>
                    <Entry Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding TeamB.TeamPlayPoints}"  HorizontalOptions="Center" MaxLength="2"></Entry>


                </Grid>

                <Grid Grid.Row="0" Grid.Column="2" BackgroundColor="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="5"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"></ColumnDefinition>
                        <ColumnDefinition Width="10"></ColumnDefinition>
                        <ColumnDefinition Width="80"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Team C"  HorizontalOptions="Center"></Label>


                    <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="Offense Points:"  HorizontalOptions="Center" VerticalOptions="Center"></Label>
