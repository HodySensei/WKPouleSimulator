                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="5"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"></ColumnDefinition>
                        <ColumnDefinition Width="10"></ColumnDefinition>
                        <ColumnDefinition Width="80"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Team D"  HorizontalOptions="Center"></Label>


                    <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="Offense Points:"  HorizontalOptions="Center" VerticalOptions="Center"></Label>
                    <Entry Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding TeamD.OffensePoints}"  HorizontalOptions="Center" MaxLength="2"></Entry>

