                    </Grid>
                    <Grid Grid.Row="0" Grid.Column="7" BackgroundColor="Transparent">
                        <Label HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="{Binding TeamD.Points}" TextColor="Black" FontAttributes="Bold"></Label>
